<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_primary"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/carViewAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/circle_shape"
                android:src="@drawable/avatar"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Latte!"
            android:textSize="16sp"
            android:textColor="@color/grey_primary_variant"
            android:layout_toEndOf="@id/carViewAvatar"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/raleway_regular"/>

        <TextView
            android:id="@+id/tvScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000"
            android:textSize="11sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/carViewAvatar"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvScores"
            android:layout_below="@id/tvName"
            android:text="coin"
            android:textSize="11sp"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"/>

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for your coffee..."
        android:iconifiedByDefault="false"
        android:queryBackground="@null"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:theme="@style/SearchViewStyle"
        android:background="@drawable/searchview_background"
        android:backgroundTint="@color/grey_opacity60_primary"/>

</LinearLayout>