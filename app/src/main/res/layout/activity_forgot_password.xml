<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#291b11"
    tools:context=".ui.activities.login.ForgotPasswordActivity">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/festive_regular"
        android:text="@string/app_name"
        android:textColor="#e4e4e4"
        android:textSize="75sp" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/raleway_variable_font_wght"
        android:text="FORGOT YOUR PASSWORD?"
        android:textColor="#bc834b"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvIntro"
        android:width="289dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/intro_forgot_password"
        android:textColor="#e4e4e4"
        android:fontFamily="@font/raleway_variable_font_wght"
        android:layout_marginTop="32dp"
        android:layout_below="@id/tvForgotPassword"
        android:textSize="20sp"
        />



    <TextView
        android:id="@+id/tvGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="#e4e4e4"
        android:fontFamily="@font/raleway_variable_font_wght"
        android:layout_marginTop="32dp"
        android:layout_below="@id/tvIntro"
        android:textSize="16sp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGmail"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:inputType="textEmailAddress"/>

    <LinearLayout
        android:layout_marginTop="44dp"
        android:layout_below="@+id/etUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/raleway_variable_font_wght"
            android:text="CANCEL"
            android:textColor="#E7A15C"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="104dp"
            android:height="40dp"
            android:background="@drawable/rounded_shape"
            android:fontFamily="@font/raleway_variable_font_wght"
            android:text="CONFIRM"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>