<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/readed"
            android:padding="12dp"
            tools:ignore="UselessLeaf">
            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order "
                android:textSize="11sp"
                android:fontFamily="@font/raleway_regular"/>
            <TextView
                android:id="@+id/tvIdBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="#0326"
                android:textSize="11sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toEndOf="@id/tvOrder"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="1dp"
                android:text="22/02/2022"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvContentNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_regular"
                android:text="@string/test_notification"
                android:ellipsize="end"
                android:layout_below="@id/tvOrder"
                android:layout_marginTop="11dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>