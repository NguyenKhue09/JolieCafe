<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_address"
        app:cardCornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_button_custom_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_in_bill"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:src="@drawable/image_logo"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_weight="1.5">
            </ImageView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/tv_order_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/raleway_regular"
                    android:text="Black Tea"
                    android:textColor="@color/text_color_2"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tv_order_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_regular"
                    android:text="@string/quantity"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_item_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_item_name">

                </TextView>

                <TextView
                    android:id="@+id/oder_item_quantity_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="5"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_order_item_quantity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_order_item_quantity"
                    app:layout_constraintTop_toTopOf="@+id/tv_order_item_quantity">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/oder_item_price"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="3"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical"
                android:text="90.000 VND"
                android:textColor="@color/text_color"
                android:textSize="11sp">

            </TextView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>